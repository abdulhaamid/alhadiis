@* @model IEnumerable<int>
@{
    ViewData["Title"] = "Arşiv";
 
    var yearsList = Model.ToList();
}



<!DOCTYPE html>
<html lang="tr">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Ezberlediklerim - @ViewData["Title"]</title>
    <!-- Bootstrap 5 CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <style>
        body {
            background-color: #f8f9fa;
            min-height: 100vh;
            padding: 20px;
        }
        .year-card {
            background: white;
            border-radius: 15px;
            padding: 25px;
            margin: 10px;
            box-shadow: 0 4px 6px rgba(0,0,0,0.1);
            text-align: center;
            font-size: 1.5rem;
            font-weight: bold;
            transition: all 0.2s ease;
            cursor: pointer;
            text-decoration: none !important;
            color: inherit !important;
            display: block;
            border: 2px solid transparent;
        }
        .year-card:hover {
            transform: translateY(-3px);
            box-shadow: 0 7px 14px rgba(0,0,0,0.15);
            background: #f1f1f1;
        }
        .year-card:active {
            background: #0d6efd !important;
            color: white !important;
            transform: scale(0.98);
            border-color: #0a58ca;
        }
        .search-box {
            max-width: 300px;
            margin: 20px auto;
        }
    </style>
</head>
<body>
    <div class="container text-center">
        <!-- Başlık -->
        <h1 class="display-1 mb-4 fw-bold">A</h1>
        <!-- Arama Kutusu -->
        <div class="search-box">
            <input type="text" class="form-control" placeholder="Ara...">
        </div>
        <!-- Ana Başlık -->
        <h2 class="my-5">EZBERLEDİKLERİM</h2>
        <!-- Yıllar -->
        @for (int i = 0; i < yearsList.Count; i += 2)
        {
            <div class="row justify-content-center">
                <div class="col-md-3 col-6">
                    <a href="/Home/MonthListesi/@yearsList[i]" class="year-card">
                        @yearsList[i]
                    </a>
                </div>
                @if (i + 1 < yearsList.Count)
                {
                    <div class="col-md-3 col-6">
                        <a href="/Home/MonthListesi/@yearsList[i + 1]" class="year-card">
                            @yearsList[i + 1]
                        </a>
                    </div>
                }
            </div>
        }
    </div>
    <!-- Bootstrap 5 JS -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>

 *@