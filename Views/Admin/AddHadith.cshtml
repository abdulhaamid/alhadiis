<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
<link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css" rel="stylesheet">

<div class="container mt-5">
    <div class="card shadow">
        <div class="card-header bg-primary text-white">
            <h2 class="mb-0"><i class="fas fa-book-medical me-2"></i>Hadis Ekle</h2>
        </div>
        <div class="card-body">
            <form asp-action="AddHadith" method="post" class="needs-validation" novalidate>
                <div class="row g-3 mb-4">
                    <div class="col-md-4">
                        <label class="form-label">Yıl <span class="text-danger">*</span></label>
                        <input type="number" name="yearNumber" class="form-control" placeholder="Örnek: 2023" required>
                    </div>

                    <div class="col-md-4">
                        <label class="form-label">Ay <span class="text-danger">*</span></label>
                        <input type="text" name="monthName" class="form-control" placeholder="Örnek: Mart" required>
                    </div>

                    <div class="col-md-4">
                        <label class="form-label">Hafta (1-4) <span class="text-danger">*</span></label>
                        <input type="number" name="weekNumber" class="form-control" min="1" max="4" placeholder="1-4 arası" required>
                    </div>
                </div>

                <div class="mb-4">
                    <label class="form-label">Türkçe İçerik <span class="text-danger">*</span></label>
                    <textarea name="turkishContent" class="form-control" rows="4" placeholder="Türkçe hadis metnini giriniz..." required></textarea>
                </div>

                <div class="mb-4">
                    <label class="form-label">Arapça İçerik <span class="text-danger">*</span></label>
                    <textarea name="arabicContent" class="form-control" rows="4" dir="rtl" style="font-family: 'Amiri', serif;" placeholder="الحديث باللغة العربية..." required></textarea>
                </div>

                <div class="mb-4">
                    <label class="form-label">Osmanlıca İçerik <span class="text-danger">*</span></label>
                    <textarea name="ottomanContent" class="form-control" rows="4" style="font-family: 'Noto Nastaliq Urdu', serif;" placeholder="Osmanlıca hadis metnini giriniz..." required></textarea>
                </div>

                <div class="d-grid gap-2">
                    <button type="submit" class="btn btn-primary btn-lg">
                        <i class="fas fa-save me-2"></i>Hadisi Kaydet
                    </button>
                </div>
            </form>
        </div>
    </div>
</div>

<!-- Gerekli JS dosyaları -->
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>